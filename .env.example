# Weekly Tech & AI Aggregator - Environment Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ============================================
# AI Provider Configuration (Choose One)
# ============================================

# Option 1: Claude API (Recommended for production)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Option 2: Ollama (Free, runs locally)
OLLAMA_BASE_URL=http://localhost:11434
# Install Ollama: https://ollama.ai/download
# Run model: ollama run llama2

# ============================================
# LinkedIn OAuth Configuration
# ============================================

# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:8000/v1/oauth/callback

# Note: For production, update redirect URI to your domain
# Production example: https://yourdomain.com/v1/oauth/callback

# ============================================
# Database Configuration
# ============================================

# Local development (default)
DATABASE_URL=sqlite:///./news_aggregator.db

# Production (PostgreSQL recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/news_aggregator

# ============================================
# Scheduler Configuration
# ============================================

# Timezone for scheduling jobs
TIMEZONE=Europe/London

# Preview job: Thursday evening
PREVIEW_TIME=18:00

# Publish job: Friday morning
PUBLISH_TIME=10:00

# APScheduler jobstore
JOBSTORE_TYPE=sqlite
JOBSTORE_PATH=./scheduler.db

# ============================================
# RSS Feed Sources
# ============================================

# Comma-separated list of RSS feed URLs
RSS_SOURCES=https://techcrunch.com/feed/,https://www.theverge.com/rss/index.xml,https://www.wired.com/feed/rss

# ============================================
# Publisher Configuration
# ============================================

# Dry run mode: saves posts locally without publishing to LinkedIn
# Set to "false" for production, "true" for testing
DRY_RUN=true

# Local storage directory for posts and credentials
POSTS_STORAGE_DIR=./data/posts

# Retry configuration for failed API calls
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=2

# ============================================
# Security & Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# ============================================
# Optional: Advanced Configuration
# ============================================

# Maximum articles to process per run (for cost control)
MAX_ARTICLES_PER_RUN=10

# Post character limit (LinkedIn max: 3000)
POST_CHAR_LIMIT=3000

# Number of articles to include in weekly post (3-6 recommended)
ARTICLES_PER_POST=5

# ============================================
# Development & Testing
# ============================================

# Enable debug mode (detailed error messages)
DEBUG=false

# Test mode: uses mock data instead of real API calls
TEST_MODE=false

# Skip AI summarization (uses article excerpts instead)
SKIP_SUMMARIZATION=false

# ============================================
# Monitoring & Alerts (Optional)
# ============================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# ALERT_EMAIL=your_email@gmail.com

# ============================================
# Notes
# ============================================

# 1. This is a template file - copy to .env and fill in real values
# 2. Never commit .env file to version control
# 3. Use strong, unique credentials for production
# 4. Rotate credentials every 90 days
# 5. Store production secrets in a secure vault (AWS Secrets Manager, etc.)
# 6. Review SECURITY.md for detailed security guidelines
